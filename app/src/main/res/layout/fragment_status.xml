<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/summary_title"
                style="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Summary"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/status_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Machine State: "/>

                <TextView
                    android:id="@+id/status_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Disconnected"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/octoprint_version_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OctoPrint Version: "/>

                <TextView
                    android:id="@+id/octoprint_version_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="0.2.1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/api_version_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="API Version: "/>

                <TextView
                    android:id="@+id/api_version_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="0.1.1"/>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>