    <dimen name="recycler_view_bottom_margin">8dp</dimen>  <!--half of normal due to cardview margin-->
    <dimen name="fab_margin">16dp</dimen>

    <!-- Formatting for match_parent as dimension -->
    <!-- http://blog.danlew.net/2015/01/06/handling-android-resources-with-non-standard-formats/  -->
    <item name="match_parent" type="dimen">-1</item>
    <dimen name="add_printer_scroll_view_width">@dimen/match_parent</dimen>

    <!-- Default screen margins, per the Android Design guidelines. -->
    <dimen name="nav_header_vertical_spacing">16dp</dimen>
    <dimen name="nav_horizontal_spacing">16dp</dimen>
    <dimen name="nav_header_height">160dp</dimen>

    <item name="wrap_content" type="dimen">-2</item>
    <dimen name="nav_width">@dimen/wrap_content</dimen>
    <dimen name="nav_margin">0dp</dimen>
    <dimen name="text_margin">16dp</dimen>

    <item name="drawable_active_opacity" format="float" type="dimen">0.54</item>

    <dimen name="playback_fragment_height">74dp</dimen>
