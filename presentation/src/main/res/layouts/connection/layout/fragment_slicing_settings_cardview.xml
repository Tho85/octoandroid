<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/connect_cardview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:animateLayoutChanges="true">
        <LinearLayout
            android:id="@+id/slicing_config_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/slicer_spinner_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/slicer"/>
            <Spinner
                android:id="@+id/slicer_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/slicing_profile_spinner_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/slicing_profile"/>
            <Spinner
                android:id="@+id/slicer_profile_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/printer_profile_spinner_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/printer_profile"/>
            <Spinner
                android:id="@+id/printer_profile_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/after_slicing_spinner_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/after_slicing"/>
            <Spinner
                android:id="@+id/after_slicing_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/after_slicing_list"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gcode_filename_colon_space"/>
                <TextView
                    android:id="@+id/slicer_gcode_filename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="some_really_really_long_file_name.gcode"/>

            </LinearLayout>
            <Button
                android:id="@+id/slice_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/slice"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/slicing_progress_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">
            <TextView
                style="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/slicing_in_progress"/>
            <TextView
                android:id="@+id/slicing_slicer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                tools:text="Slicer: cura"/>
            <TextView
                android:id="@+id/slicing_source_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                tools:text="Source Location: local"/>
            <TextView
                android:id="@+id/slicing_source_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                tools:text="Source File: bird_33.stl"/>
            <TextView
                android:id="@+id/slicing_destination_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                tools:text="Destination Path: local"/>
            <TextView
                android:id="@+id/slicing_destination_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Destination File: bird_33.gco"/>
            <ProgressBar
                android:id="@+id/slicing_progress_bar"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/DefaultProgressBarHorizontal"
                tools:progress="50"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>