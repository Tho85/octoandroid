<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/connect_cardview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:animateLayoutChanges="true">
        <TextView
            android:id="@+id/slicer_spinner_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Slicer"/>
        <Spinner
            android:id="@+id/slicer_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/slicing_profile_spinner_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Slicing Profile"/>
        <Spinner
            android:id="@+id/slicer_profile_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/printer_profile_spinner_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/printer_profile"/>
        <Spinner
            android:id="@+id/printer_profile_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/after_slicing_spinner_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="After Slicing"/>
        <Spinner
            android:id="@+id/after_slicing_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/after_slicing_list"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GCode Filename: "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="some_really_really_long_file_name.gcode"/>

        </LinearLayout>
        <Button
            android:id="@+id/slice_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Slice"/>
    </LinearLayout>
</android.support.v7.widget.CardView>