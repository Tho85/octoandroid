<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/connect_cardview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:animateLayoutChanges="true">
        <TextView
            android:id="@+id/serial_port_spinner_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/serial_port"/>
        <Spinner
            android:id="@+id/serial_port_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/baudrate_spinner_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/baudrate"/>
        <Spinner
            android:id="@+id/baudrate_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/printer_profile_spinner_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/printer_profile"/>
        <Spinner
            android:id="@+id/printer_profile_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:id="@+id/save_connection_settings_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save_connection_settings"/>
        <CheckBox
            android:id="@+id/auto_connect_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/auto_connect_on_server_startup"/>
        <Button
            android:id="@+id/connect_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/connect"/>
    </LinearLayout>
</android.support.v7.widget.CardView>