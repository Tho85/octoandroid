<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/files_list_on_click_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:visibility="gone"
    tools:visibility="visible">

    <com.nairbspace.octoandroid.views.HintedImageView
        android:id="@+id/file_download_icon"
        android:layout_width="24dp"
        android:layout_height="32dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_weight="1"
        android:alpha="@dimen/drawable_active_opacity"
        android:background="?attr/metaSelectableItemBackground"
        android:contentDescription="@string/download"
        android:src="@drawable/ic_file_download_black_24dp"/>

    <com.nairbspace.octoandroid.views.HintedImageView
        android:id="@+id/file_delete_icon"
        android:layout_width="24dp"
        android:layout_height="32dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_weight="1"
        android:alpha="@dimen/drawable_active_opacity"
        android:background="?attr/metaSelectableItemBackground"
        android:contentDescription="@string/delete_file"
        android:src="@drawable/ic_delete_black_24dp"/>

    <com.nairbspace.octoandroid.views.HintedImageView
        android:id="@+id/file_details_icon"
        android:layout_width="24dp"
        android:layout_height="32dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_weight="1"
        android:alpha="@dimen/drawable_active_opacity"
        android:background="?attr/metaSelectableItemBackground"
        android:contentDescription="@string/file_details"
        android:src="@drawable/ic_more_vert_black_24dp"/>

    <com.nairbspace.octoandroid.views.HintedImageView
        android:id="@+id/slice_file_icon"
        android:layout_width="24dp"
        android:layout_height="32dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_weight="1"
        android:alpha="@dimen/drawable_active_opacity"
        android:background="?attr/metaSelectableItemBackground"
        android:contentDescription="@string/slice"
        android:src="@drawable/ic_content_cut_black_24dp"/>

    <com.nairbspace.octoandroid.views.HintedImageView
        android:id="@+id/load_file_icon"
        android:layout_width="24dp"
        android:layout_height="32dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_weight="1"
        android:alpha="@dimen/drawable_active_opacity"
        android:background="?attr/metaSelectableItemBackground"
        android:contentDescription="@string/load"
        android:src="@drawable/ic_folder_black_24dp"/>

    <com.nairbspace.octoandroid.views.HintedImageView
        android:id="@+id/printer_file_icon"
        android:layout_width="24dp"
        android:layout_height="32dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_weight="1"
        android:alpha="@dimen/drawable_active_opacity"
        android:background="?attr/metaSelectableItemBackground"
        android:contentDescription="@string/print"
        android:src="@drawable/ic_print_black_24dp"/>

</LinearLayout>