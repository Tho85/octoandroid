<?xml version="1.0" encoding="utf-8"?>
<!-- padding bottom is large so fab doesn't block last printer  -->
<android.support.v7.widget.RecyclerView
    android:id="@+id/printer_list_recyclerview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:paddingBottom="72dp"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layoutManager="LinearLayoutManager"
    tools:listitem="@layout/fragment_printer_list_item"
    tools:context="com.nairbspace.octoandroid.ui.printer_settings.list.PrinterListFragment"/>