<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/connect_cardview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_horizontal_margin"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginEnd="@dimen/activity_vertical_margin"
    app:cardElevation="4dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:animateLayoutChanges="true">
        <TextView
            android:id="@+id/serial_port_spinner_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Serial Port"/>
        <Spinner
            android:id="@+id/serial_port_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/baudrate_spinner_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Baudrate"/>
        <Spinner
            android:id="@+id/baudrate_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/printer_profile_spinner_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Printer Profile"/>
        <Spinner
            android:id="@+id/printer_profile_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:id="@+id/save_connection_settings_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save connection settings"/>
        <CheckBox
            android:id="@+id/auto_connect_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auto-Connect on server startup"/>
        <Button
            android:id="@+id/connect_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connect"/>
    </LinearLayout>
</android.support.v7.widget.CardView>